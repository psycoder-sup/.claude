# =============================================================================
# Ghostty Configuration
# =============================================================================
# Symlink: ~/.config/ghostty/config -> ~/.claude/ghostty/ghostty.config
# Docs: https://ghostty.org/docs/config

# -----------------------------------------------------------------------------
# Font
# -----------------------------------------------------------------------------
font-family = JetBrainsMono Nerd Font Mono

# -----------------------------------------------------------------------------
# Theme
# -----------------------------------------------------------------------------
theme = Catppuccin Mocha

# -----------------------------------------------------------------------------
# Key Bindings
# -----------------------------------------------------------------------------
keybind = shift+enter=text:\x1b\r

# -----------------------------------------------------------------------------
# Custom Scripts
# -----------------------------------------------------------------------------
keybind = super+shift+t=text:~/.claude/ghostty/ghostty-worktree-tab.sh\r

# -----------------------------------------------------------------------------
# Splits
# -----------------------------------------------------------------------------
split-divider-color = cyan
