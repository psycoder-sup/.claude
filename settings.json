{
  "permissions": {
    "allow": [
      "WebFetch",
      "SebSearch",
      "Bash(ls:*)"
    ],
    "deny": [
      "Bash(git -C:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true,
    "base@psycoder-tools": false
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]777;notify;Claude Code;Permission required\\007' > /dev/tty &"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]777;notify;Claude Code;Question for you\\007' > /dev/tty &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "printf '\\033]777;notify;Claude Code;Task completed\\007' > /dev/tty &"
          }
        ]
      }
    ]
  }
}
