{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(sed:*)",
      "mcp__plugin_context7_context7__*",
      "Bash(git fetch:*)"
    ],
    "deny": [
      "Bash(git -C:*)"
    ],
    "ask": [
      "Bash(rm:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"SESSION_ID: \" + .session_id'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.session_id' | xargs -I{} baragi session close --session-id='{}'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ -n \"$TMUX\" ]; then tmux list-clients -F '#{client_tty}' | while read tty; do printf '\\033]777;notify;Claude Code;Task completed\\007' > \"$tty\"; done; else printf '\\033]777;notify;Claude Code;Task completed\\007' > /dev/tty; fi &"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -n \"$TMUX\" ]; then tmux list-clients -F '#{client_tty}' | while read tty; do printf '\\033]777;notify;Claude Code;Question for you\\007' > \"$tty\"; done; else printf '\\033]777;notify;Claude Code;Question for you\\007' > /dev/tty; fi &"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/validate-git-command.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -n \"$TMUX\" ]; then tmux list-clients -F '#{client_tty}' | while read tty; do printf '\\033]777;notify;Claude Code;Permission required\\007' > \"$tty\"; done; else printf '\\033]777;notify;Claude Code;Permission required\\007' > /dev/tty; fi &"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline/statusline-command.sh"
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Brewing",
      "Steaming",
      "Frothing",
      "Grinding",
      "Pouring",
      "Blending",
      "Serving"
    ]
  },
  "effortLevel": "medium"
}
